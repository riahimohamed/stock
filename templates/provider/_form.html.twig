          <div class="form-error">
              {{ form_errors(form.image) }}
          </div>
        </div>

        <div class="form-group pt-4">
            <button class="btn btn-warning btn-lg">
                {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div><!-- content -->
