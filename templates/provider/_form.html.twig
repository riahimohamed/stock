            </div>
            <div class="form-group col-md-4">
                {{ form_label(form.ref, 'Réference') }}
        		{{ form_widget(form.ref, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Réference'}}) }}
            </div>
            <div class="form-group col-md-4">
                {{ form_label(form.account_name, 'Nom du compte') }}
        		{{ form_widget(form.account_name, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Nom du compte'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
              	{{ form_label(form.type_contact, 'Type de contact') }}
