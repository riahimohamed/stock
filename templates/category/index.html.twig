{% extends 'base.html.twig' %}

{% block title %}Liste categories{% endblock %}

{% block body %}

<div class="main-content">
    <div class="container">

        <div class="content-block">
            <div class="row">
                <div class="col-md-12">
                    <div class="title">
                        <h1 class="h2 mt-0">
                            <i class="ik ik-tag "></i> Liste des catégories
                        </h1>
                    </div>
                </div>
            </div>
            <div class="col-md-12 pt-4">
                {{ include('category/_form.html.twig') }}
            </div>
        </div><!-- content-block -->

        <div class="table-block my-5">
            <div class="col-md-12">
                <div class="card table-card">
                    <div class="card-header">
                        <h3>Liste des données pour lesquelles on peut gérer des catégories :</h3>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="ik ik-chevron-left action-toggle"></i></li>
                                <li><i class="ik ik-minus minimize-card"></i></li>
                                <li><i class="ik ik-x close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Catégorie</th>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody>
                                	{% for category in categories %}
	                                    <tr>
	                                        <td>{{ category.id }}</td>
	                                        <td>{{ category.name }}</td>
	                                        <td class="d-flex">
                                                <a href="{{ path('category_edit', {'id': category.id}) }}">
                                                    <i class="ik ik-edit f-16 text-green"></i>
                                                </a>
                                                {{ include('category/_delete_form.html.twig') }}
	                                        </td>
	                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- table-block -->

    </div>
</div>

{% endblock %}
