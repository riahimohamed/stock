<header class="header-top" header-theme="light">
    <div class="container-fluid">
        
        {% for message in app.flashes('success') %}
            <div class="flash-notice">
                <div class="alert alert-success anime alert-dismissible fade show" role="alert">
                  <strong><i class="ik ik-check-circle"></i></strong> {{ message }}
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="flash-notice">
                <div class="alert alert-danger anime alert-dismissible fade show" role="alert">
                  <strong><i class="ik ik-check-circle"></i></strong> {{ message }}
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
            </div>
        {% endfor %}

        <div class="d-flex justify-content-between">
            <div class="top-menu d-flex align-items-center">
                <button type="button" class="btn-icon mobile-nav-toggle d-lg-none"><span></span></button>
                <div class="header-search">
                    <div class="input-group">
                        <span class="input-group-addon search-close"><i class="ik ik-x"></i></span>
                        <input type="text" class="form-control" style="height:auto">
                        <span class="input-group-addon search-btn"><i class="ik ik-search"></i></span>
                    </div>
                </div>
            </div>
            <div class="top-menu d-flex align-items-center">
                
                <span class="text-muted">{{ app.user.email }}</span>

                {% if app.user %}
                    <div class="dropdown">
                        <a class="dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            
                            {% if app.user.avatar %}
                                <img class="avatar" src="{{ asset('uploads/users/') ~ app.user.avatar }}" alt="">
                            {% else %}
                                <img class="avatar" src="{{ asset('img/user_placeholder.jpg') }}" alt="">
                            {% endif %}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="{{ path('app_profile', {'id': app.user.id}) }}">
                                <i class="ik ik-user dropdown-icon"></i> Profile
                            </a>
                            <a class="dropdown-item" href="{{ path('security_register') }}">
                                <i class="ik ik-settings dropdown-icon"></i> Inscription
                            </a>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">
                                <i class="ik ik-power dropdown-icon"></i> DÃ©connexion
                            </a>
                        </div>
                    </div>
                {% else %}
                    <a href="{{ path('app_login') }}">
                        Se connecter
                    </a>
                {% endif %}

            </div>
        </div>
    </div>
</header>