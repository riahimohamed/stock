{% extends 'base.html.twig' %}

{% block title %}Liste produits{% endblock %}

{% block body %}

<div class="main-content">
    <div class="container">

        <div class="content-block">
            <div class="row">
                <div class="col-md-12">
                    <div class="title">
                        <h1 class="h2 mt-0">
                            <i class="ik ik-tag"></i> Liste des produits
                        </h1>
                    </div>
                </div>
            </div>
        </div><!-- content-block -->

        <div class="table-block my-5">
            <div class="col-md-12">
                <div class="card table-card">
                    <div class="card-header">
                        <h3>Liste des données pour lesquelles on peut gérer des seuil :</h3>
                    </div>
                    <div class="card-block">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Ref</th>
                                        <th>Quentité</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td>
                                                {{ product.label }}
                                            </td>
                                            <td>
                                                {{ product.ref }}
                                            </td>
                                            <td>
                                                {{ product.amount }}
                                            </td>
                                        </tr>
                                        {% else %}
                                        <tr>
                                            <td align="center" colspan="3">
                                                Aucune Produit
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- table-block -->

    </div>
</div>

{% endblock %}
