{{ form_start(form) }}
    <div class="main-content">
	    <div class="container"></div>

	    <div class="content-block">
	        <div class="row">
	            <div class="col-md-12">
	                <div class="title">
	                    <h1 class="h2 mt-0">
	                        <i class="ik ik-user"></i> Ajouter client
	                        <span class="text-muted h5">Données client</span>
	                    </h1>
	                </div>
	            </div>
	            
	        </div>
	    </div><!-- content-block -->

	    <!-- MultiStep Form -->
	    <div class="container-fluid">
	        <div class="cards">
	            <form>
	                <div class="content">
	                    <div class="form-row">
	                        <div class="form-group col-md-4">
	                          {{ form_label(form.type, 'Particulier ou entreprise') }}
                        	  {{ form_widget(form.type, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Particulier ou entreprise'}}) }}
	                        </div>
	                        <div class="form-group col-md-4">
	                            {{ form_label(form.ref, 'Réference') }}
                        		{{ form_widget(form.ref, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Réference'}}) }}
	                        </div>
	                        <div class="form-group col-md-4">
	                            {{ form_label(form.account_name, 'Nom du compte') }}
                        		{{ form_widget(form.account_name, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Nom du compte'}}) }}
	                        </div>
	                    </div>
	                    <div class="row">
	                        <div class="form-group col-md-4">
	                          	{{ form_label(form.type_contact, 'Type de contact') }}
                        		{{ form_widget(form.type_contact, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Type de contact'}}) }}
	                        </div>
	                    </div>
	                </div><!-- content -->
	                
	                <div class="content">    
	                    <div class="form-row">
	                        <div class="form-group col-md-4">
	                            {{ form_label(form.name, 'Nom') }}
                        		{{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Nom'}}) }}
	                        </div>
	                        <div class="form-group col-md-4">
	                            {{ form_label(form.mobile, 'Mobile') }}
                        		{{ form_widget(form.mobile, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Mobile'}}) }}
	                        </div>
	                        <div class="form-group col-md-4">
	                            {{ form_label(form.fixe, 'Fixe') }}
                        		{{ form_widget(form.fixe, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Fixe'}}) }}
	                        </div>
	                    </div>
	                    <div class="row">
	                        <div class="form-group col-md-4">
	                            {{ form_label(form.fax, 'Fax') }}
                        		{{ form_widget(form.fax, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Fax'}}) }}
	                        </div>
	                        <div class="form-group col-md-4">
	                            {{ form_label(form.email, 'Email') }}
                        		{{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Email'}}) }}
	                        </div>
	                    </div>
	                </div><!-- content -->
	                
	                <div class="content border">
	                    <h2>Lien vers l'image</h2>

	                    <div class="input-group my-3">
						  <div class="input-group-prepend">
						    <span class="input-group-text">Télécharger</span>
						  </div>
						  <div class="custom-file">
						    {{ form_widget(form.image, {'attr': {'class': 'custom-file-input'}}) }}
						    <label class="custom-file-label" for="inputGroupFile01"> Choisisser une image</label>
						  </div>
						</div>

	                    <div class="form-group pt-4">
	                        <button class="btn btn-warning btn-lg">
	                            {{ button_label|default('Enregistrer') }}
	                        </button>
	                    </div>
	                </div><!-- content -->


	            </form>
	            
	        </div>
	    </div>
	</div>
{{ form_end(form) }}
